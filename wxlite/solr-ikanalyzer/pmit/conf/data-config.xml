	 <document>
        <!-- name属性，就代表着一个文档，可以随便命名 -->
        <!-- query是一条sql，代表在数据库查找出来的数据 -->
        <entity name="product" query="select id, names, num, pprice, oprice, instruction, browse_cnt, IFNULL(main_url, url1) main_url, classify_names1, classify_names2, classify_names3, classify_id1, classify_id2, classify_id3, product_group_id, sku_name, sku_value, sku_value_all, brand_name, shop_name, shop_id, search_keywords, ecid, order_no, evaluate_total, already_buy_count, IFNULL((browse_cnt + evaluate_total + already_buy_count),0) as all_cnt, created_on from shopn_product where show_state = 1 and deleted = 0 and state = 1">
        <!-- 每一个field映射着数据库中列与文档中的域，column是数据库列，name是solr的域(必须是在managed-schema文件中配置过的域才行) -->
