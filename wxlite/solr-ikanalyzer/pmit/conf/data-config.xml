		<field column="sku_name" name="product_sku_name"/>
		<field column="sku_value" name="product_sku_value"/>
		<field column="sku_value_all" name="product_sku_value_all"/>
		<field column="brand_name" name="product_brand_name"/>
		<field column="shop_name" name="product_shop_name"/>
		<field column="shop_id" name="product_shop_id"/>
		<field column="search_keywords" name="product_search_keywords"/>
		<field column="ecid" name="product_ecid"/>
